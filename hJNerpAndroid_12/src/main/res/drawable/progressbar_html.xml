<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/prrgressbar_bground_1"
                android:endColor="@color/prrgressbar_bground_1"
                android:startColor="@color/prrgressbar_bground_1" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:centerColor="@color/prrgressbar_blue_1"
                    android:endColor="@color/prrgressbar_blue_1"
                    android:startColor="@color/prrgressbar_blue_1" />
            </shape>
        </clip>
    </item>
</layer-list>