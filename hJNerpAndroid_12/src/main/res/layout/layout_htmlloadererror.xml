<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relayout_html_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/html_error_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/error_refresh"
            android:layout_marginBottom="@dimen/size_25"/>

        <TextView
            android:id="@+id/html_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/html_network_error"/>

    </LinearLayout>

</RelativeLayout>
